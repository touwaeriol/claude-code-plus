{
  "name": "claude-sdk-wrapper",
  "version": "1.0.0",
  "description": "Claude SDK Wrapper Server for IntelliJ Plugin",
  "main": "dist/server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "clean": "rimraf dist",
    "clean:all": "rimraf dist ../src/main/resources/claude-node",
    "build": "npm run clean && tsc",
    "start": "node dist/server.js",
    "start:dev": "tsx src/server.ts",
    "build:plugin": "npm run build && node scripts/build-for-plugin.js",
    "build:plugin:esbuild": "npm run build && node scripts/esbuild-bundle.js",
    "check-node": "node scripts/check-node-version.js"
  },
  "keywords": [
    "claude",
    "sdk",
    "wrapper"
  ],
  "author": "Claude Code Plus Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-code": "latest",
    "@types/ws": "^8.18.1",
    "semver": "^7.5.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "esbuild": "^0.25.5",
    "rimraf": "^6.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
